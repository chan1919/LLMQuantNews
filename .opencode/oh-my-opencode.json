{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/refs/heads/master/schemas/oh-my-opencode.json",
  "agents": {
    "planner-sisyphus": {
      "enabled": true,
      "replace_plan": true
    },
    "explore": {
      "enabled": true
    },
    "oracle": {
      "enabled": true
    }
  },
  "disabled_mcps": [],
  "experimental": {
    "preemptive_compaction_threshold": 0.85,
    "context_window_monitor_enabled": true
  },
  "hooks": {
    "todo-continuation-enforcer": {
      "enabled": true
    },
    "context-window-monitor": {
      "enabled": true
    },
    "preemptive-compaction": {
      "enabled": true,
      "threshold": 0.85
    },
    "agent-usage-reminder": {
      "enabled": true
    },
    "git-commit-coauthor": {
      "enabled": false
    },
    "git-commit-footer": {
      "enabled": false
    }
  },
  "disabled_hooks": ["git-commit-coauthor", "git-commit-footer"],
  "skills": {
    "enabled": true,
    "paths": [
      "./skills"
    ]
  },
  "categories": {
    "quick": {
      "model": "opencode/gpt-5-nano",
      "description": "简单任务：拼写修复、单文件修改、typo 修复",
      "load_skills": ["git-master"]
    },
    "deep": {
      "model": "anthropic/claude-opus-4-6",
      "description": "复杂任务：架构设计、深度研究、性能优化"
    },
    "visual-engineering": {
      "model": "google/gemini-3-pro",
      "description": "前端 UI/UX、组件开发、样式优化",
      "load_skills": ["playwright", "frontend-ui-ux"]
    },
    "crawler": {
      "model": "openai/gpt-5.2",
      "description": "新闻爬虫开发与调试、信息源配置"
    },
    "llm": {
      "model": "anthropic/claude-sonnet-4-6",
      "description": "LLM 集成和 AI 功能开发、评分系统优化"
    },
    "writing": {
      "model": "kimi-for-coding/k2p5",
      "description": "文档编写、注释更新、README 维护"
    }
  },
  "category_defaults": {
    "visual-engineering": {
      "load_skills": ["playwright", "frontend-ui-ux"]
    },
    "quick": {
      "load_skills": ["git-master"]
    },
    "deep": {
      "load_skills": []
    }
  },
  "project": {
    "name": "LLMQuantNews",
    "description": "AI 新闻量化分析平台 - 多渠道新闻采集、智能量化评分、多渠道推送",
    "tech_stack": ["FastAPI", "React", "TypeScript", "Celery", "Redis", "LiteLLM"],
    "language": "zh-CN",
    "code_style": {
      "python": {
        "formatter": "black",
        "line_length": 88,
        "type_hints": "required",
        "comments": "chinese"
      },
      "typescript": {
        "component_naming": "PascalCase",
        "function_naming": "camelCase",
        "styling": "MUI sx prop"
      }
    }
  }
}
